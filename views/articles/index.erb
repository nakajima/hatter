<h1>Articles!</h1>

<hr>

<% @articles.each do |article| %>
  <h2><a href="/articles/<%= article.to_param %>"><%= article.name %></a></h2>
  <div>
    <%= article.body %>
  </div>
  <small>
    <a href="/articles/<%= article.to_param %>/edit">Click here to edit</a>
  </small>
  <hr>
<% end %>

<a href="/articles/new">Create one!</a>
